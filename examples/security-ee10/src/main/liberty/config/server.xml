<?xml version="1.0" encoding="UTF-8"?>
<server description="demo">

    <featureManager>
        <feature>servlet-6.0</feature>
        <feature>faces-4.0</feature>
        <feature>cdi-4.0</feature>
        <feature>enterpriseBeans-4.0</feature>
        <feature>appAuthentication-3.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint" httpPort="8080" />

    <httpSession useContextRootAsCookiePath="true"
                 invalidateOnUnauthorizedSessionRequestException="true" />

    <webAppSecurity useAuthenticationDataForUnprotectedResource="false" />

</server>
